// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  message Messages[]
}
model Messages {
  id    Int     @id @default(autoincrement())
  fromUser Users @relation(fields: [fromId], references: [id])
  fromId Int  
  toUserId Int
  message  String
}
